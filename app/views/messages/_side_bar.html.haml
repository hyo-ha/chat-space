.chat-side
  .side-bar__user-name
    .top-items
      %p.top-items_name 
        = current_user.name
      %ul.top-items_icons
        %li.top-items_icons_newgroup
          = link_to edit_user_path(current_user) do
            = icon('fas','cog')
        %li.top-items_icons_edit-user
          = link_to new_group_path do
            = icon('fas','edit')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message