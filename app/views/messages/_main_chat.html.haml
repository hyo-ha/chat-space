.chat-main
  .chat-main__group-info
    .main-header__leftbox
      %h2.main-header_left-box_current-group
        = @group.name
      %ul.main-header__leftbox_member-list
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .main-header__edit-btn
      = link_to edit_group_path(@group.id), class: "edit-btn__info" do
        Edit
  .chat-main__message-list
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .form__box
        = f.text_field :content, class: "form__box__message", placeholder: "type a message"
        = f.label :image, class: "form__box__image" do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: "hidden"
      = f.submit 'Send', class: "submit-btn"