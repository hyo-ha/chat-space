.chat-main
  .chat-main__group-info
    .main-header__leftbox
      %h2.main-header_left-box_current-group
         = @group.name
      %ul.main-header__leftbox_member-list
        Memberï¼š
         - @group.users.each do |user|
          = user.name
        %li.main-header__leftbox-member-list_member maemae
    .main-header__edit-btn
      = link_to edit_group_path(@group.id), class: "edit-btn__info" do
        Edit
  .chat-main__message-list
  .chat-main__message-form
    .input-box
      %input{type: "text", class: "input-box__text", placeholder: "type a message"}
      %label{class: "input-box__image"}
        = icon('fas', 'image')
        %input{type: "file", class: "input-box__image__file"}
    %input{type: "submit", class: "submit-btn ", value:'Send'} 